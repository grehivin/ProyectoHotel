@model Entidades.Habitaciones

@{
    ViewData["Title"] = "Habitaciones";
}

<h1>Nueva</h1>

<h4>Habitación</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdHabitacion" class="control-label"></label>
                <input asp-for="IdHabitacion" class="form-control" />
                <span asp-validation-for="IdHabitacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumHabitacion" class="control-label"></label>
                <input asp-for="NumHabitacion" class="form-control" />
                <span asp-validation-for="NumHabitacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PisoHabitacion" class="control-label"></label>
                <input asp-for="PisoHabitacion" class="form-control" />
                <span asp-validation-for="PisoHabitacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTipoHabitacion" class="control-label"></label>
                <select asp-for="IdTipoHabitacion" class ="form-control" asp-items="ViewBag.IdTipoHabitacion"></select>
            </div>
            <div class="form-group">
                <label asp-for="CapacidadPersonas" class="control-label"></label>
                <input asp-for="CapacidadPersonas" class="form-control" />
                <span asp-validation-for="CapacidadPersonas" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HabitacionActiva" /> @Html.DisplayNameFor(model => model.HabitacionActiva)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-dark">Cancelar</a>
            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
