@model IEnumerable<Entidades.Roles>

@{
    ViewData["Title"] = "Roles";
}

<h1>Adiministración de roles</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo rol</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdRol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RolActivo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdRol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RolActivo)
            </td>
            <td>
                <!--
                <a asp-action="Details" asp-route-id="@item.IdRol" class="btn btn-info">Informaciónn</a> 
                -->
                <a asp-action="Edit" asp-route-id="@item.IdRol" class="btn btn-warning">Editar</a> 
                <a asp-action="Delete" asp-route-id="@item.IdRol" class="btn btn-danger">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
