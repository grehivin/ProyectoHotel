@model Usuarios
@{
    Layout = null ;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <title> Login | Hotel Atardecer </title>
</head>
<body>
    <h1 class="display-2 , text-center">Hotel Atardecer</h1>
    <h4 class="text-center ,display-4 , font-weight-lighter" >Proyecto #1 | Progra Avanzada</h4>
    <div class="row mt-5">
        <div class="col-sm-4 offset-sm-4">
            <form asp-action="Autenticacion" asp-controller="Seguridad" method="post">
            <div  class="mb-3">
                <label class="form-label">Usuario:</label>
                <input type="text" class="form-control" asp-for="Usuario"/>
            </div>
                <div class="mb-3">
                <label class="form-label">Contraseña:</label>
                <input type="password" class="form-control" asp-for="Contrasena"/>
            </div>
            <button type="submit" class="btn btn-primary">Iniciar Sesion</button>
        </form>
        </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
</body>
</html>


